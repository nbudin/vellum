a.button {
    text-decoration: none;
    color: #000;
    cursor: default;
    display: inline-block;
}

a.button.delete {
    padding-top: 0;
    padding-bottom: 0;
}

a.button:hover {
    color: #000 !important;
}

.color_swatch {
    background-color: auto !important;
    background-image: none !important;
    border-radius: 0px !important;
    -moz-border-radius: 0px !important;
    -webkit-border-radius: 0px !important;
    width: 1.5em;
    height: 1.5em;
    border: 1px outset black;
    vertical-align: middle;
}

.new {
    background-color: #6f6 !important;
}

.delete {
    background-color: #f66 !important;
    border-radius: 0px !important;
    -moz-border-radius: 0px !important;
    -webkit-border-radius: 0px !important;
    text-transform: uppercase;
    font-size: 90%;
}

.edit {
    background-color: #fc6 !important;
    border-top-left-radius: 0px !important;
    border-bottom-left-radius: 0px !important;
    -moz-border-radius-topleft: 0px !important;
    -moz-border-radius-bottomleft: 0px !important;
    -webkit-border-top-left-radius: 0px !important;
    -webkit-border-bottom-left-radius: 0px !important;
    float: right;
}

.save {
    background-color: #ccf !important;
}

.back {
    background-color: #7fc !important;
    border-top-right-radius: 0px !important;
    border-bottom-right-radius: 0px !important;
    -moz-border-radius-topright: 0px !important;
    -moz-border-radius-bottomright: 0px !important;
    -webkit-border-top-right-radius: 0px !important;
    -webkit-border-bottom-right-radius: 0px !important;
    float: left;
}

.cancel {
    background-color: #f66 !important;
    border-top-right-radius: 0px !important;
    border-bottom-right-radius: 0px !important;
    -moz-border-radius-topright: 0px !important;
    -moz-border-radius-bottomright: 0px !important;
    -webkit-border-top-right-radius: 0px !important;
    -webkit-border-bottom-right-radius: 0px !important;
    float: left;
}

.transition {
    background-color: #c8f !important;
}

ul.itemlist {
    z-index: 1;
    max-width: 60em;
    list-style-position: inside;
    list-style-type: none;
    margin-top: 0;
}

ul.itemlist li {
    padding-top: 2px;
    padding-bottom: 2px;
    overflow: auto;
    clear: both;
}

ul.itemlist li.even, dl .even {
    background-color: #eee;
}

ul.itemlist li.odd, dl .odd {
    background-color: #ddd;
}

ul.itemlist a {
    color: #000;
    font-weight: bold;
    text-decoration: none;
}

ul.itemlist a:hover {
    color: #fff;
}

ul li .assignee {
    font-size: 90%;
}

button img {
    vertical-align: middle;
    padding-right: 0.3em;
}

ul.sortlist {
    list-style-type: none;
    margin-left: 0px;
    padding-left: 0px;
}

ul.sortlist li {
  padding-left: 20px;
}

.sort_handle {
  cursor: move;
  color: #777777;
}

ul.sortlist li .sort_handle {
  margin-left: -15px;
  float: left;
}

ul.tabstrip {
    list-style-type: none;
    margin-bottom: 0;
}

li.tab {
    display: -moz-inline-block;
    display: inline-block;
    padding-bottom: 0.5em;
}

li.tab a {
    background-color: #a6f;
    background-image: url(<%= image_path "button-bg.png" %>);
    background-position: 50% 50%;
    background-repeat: repeat-x;
    color: #000;
    text-decoration: none;
    font-weight: bold;
    border: 1px black solid;
    border-bottom: none;
    padding: 0.5em;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    -moz-border-radius-topleft: 10px;
    -moz-border-radius-topright: 10px;
    -webkit-border-top-left-radius: 10px;
    -webkit-border-top-right-radius: 10px;
}

li.tab a:focus {
    -moz-outline: 0;
    background-image: url(<%= image_path "button-bg-prelight.png" %>);
}

li.tab a:hover {
    background-image: url(<%= image_path "button-bg-prelight.png" %>);
}

li.tab a.active {
    background-image: url(<%= image_path "button-bg-prelight.png" %>);
    background-color: #c9f;
}

table.doc_attrs td.value textarea, table.doc_attrs td.value input[type=text], table.doc_attrs td.value .edit-expander-preview {
    width: 85%;
}

.willDelete {
  background-color: #faa !important;
}

.willAdd {
  background-color: #afa !important;
}

.fromTemplate {
  background-color: #ccf !important;
}

#docSummaryPopup {
  background-color: white;
  /*width: 322px;*/
  float: right;
  max-height: 300px;
  overflow-y: auto;
  border: 1px solid black;
  border-top: none;
  border-bottom-right-radius: 5px;
  border-bottom-left-radius: 5px;
  -webkit-border-bottom-right-radius: 5px;
  -webkit-border-bottom-left-radius: 5px;
  -moz-border-radius-bottomright: 5px;
  -moz-border-radius-bottomleft: 5px;
  padding: 3px;
}

#docSummaryPopup p, #docSummaryPopup li {
  font-size: 11px;
  line-height: 13px;
}

#docSummaryPopup p:first-child {
  margin-top: 0;
}

#docSummaryPopup p:last-child {
  margin-bottom: 0;
}

li.expanded {
  background-color: black !important;
  color: white !important;
}

li.expanded a {
  color: white !important;
  
}

ul.itemlist :-moz-any-link:focus {
  outline: none;
}

.vellumInPlaceEdit {
  cursor: pointer;
}

.vellumInPlaceEdit:hover {
  background-color: #ffa;
}

.vellumColorPicker {
  width: 15px;
  height: 15px;
  position: relative;
  border: 2px #666 outset;
  display: inline-block;
  float: left;
  cursor: pointer;
}

.vellumColorPickerPlaceholder {
  position: absolute;
  z-index: 1000;
  background-color: white;
  border: 1px black solid;
  top: 16px;
  left: -2px;
  width: 200px;
  height: 200px;
  display: none;
}
