.clear {
    clear: both;
}

.metadata {
    font-size: 115%;
    min-height: 14px;
    width: 100%;
    position: relative;
}

.complex_item {
    border: 1px #00f solid;
    background-color: #eef;
    margin-top: 0.5em;
    margin-bottom: 0.5em;
    max-width: 60em;
}

.complex_item .metadata {
    background-color: #ccf;
}

.showhide {
    color: #333;
    font-size: 90%;
    margin-left: 2em;
    display: inline-block;
}

.type {
    float: right;
    padding: 2px;
}

.complex_item .type {
    background-color: #aaf;
}

.complex_item .actions {
    clear: both;
    background-color: rgba(0, 0, 0, 0.3);
    color: white;
    width: 100%;
    text-align: right;
    list-style-type: none;
    margin: 0;
    padding: 0;
}

.complex_item .actions li {
    margin: 0;
    padding: 2px;
    display: inline-block;
    list-style-type: none;
}

/*.complex_item .actions li a {
    color: white;
}*/

table.structure td p:first-child {
    margin-top: 0;
}

table.structure td p:last-child {
    margin-bottom: 0;
}

table.structure .document_content {
    padding: 0.5em;
    background-color: #e9e9e9;
}

form.button-to, form.button-to div {
    display: inline;
}

