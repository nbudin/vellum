<h1>New attribute for template "<%=h @structure_template.name %>"</h1>

<%= error_messages_for :attr %>

<% form_for(:attr, :url => template_schema_structure_template_attrs_path(@template_schema, @structure_template)) do |f| %>
  <%= hidden_field_tag "config_class", params[:config_class] %>
  <p>
    <%= f.text_field "name" %>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Cancel', template_schema_structure_template_path(@template_schema, @structure_template) %>