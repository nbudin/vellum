body {
    margin-right: 26.5em;
}

.jumpbox {
    width: 25em;
	max-height: 90%;
	overflow-x: visible;
	overflow-y: auto;
    position: fixed;
	top: 20px;
	margin-top: 0.5em;
	right: 0.5em;
    background-color: <%= @site_settings.site_color %>;
    padding: 0.3em;
    text-align: center;
    border-radius: 5px;
    margin-right: 0;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
}

.jumpbox > div {
    text-align: left;
}

.jumpbox h2 {
    border-bottom: 1px #550 solid;
    font-size: 16px;
}

.jumpbox ul.itemlist {
    margin-left: 0;
    padding-left: 0;
}

.jumpbox ul.itemlist li.odd {
    background-color: #dd6;
}

.jumpbox ul.itemlist li.even {
    background-color: #ee7;
}

.jumpbox .navigation {
    overflow: hidden;
	text-align: center;
	vertical-align: middle;
}