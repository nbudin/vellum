body { background-color: #fff; color: #333; }

body, p, ol, ul, td {
  font-family: sans-serif;
  font-size:   13px;
  line-height: 18px;
}

pre {
  background-color: #eee;
  padding: 10px;
  font-size: 11px;
}

a { color: #000; }
a:visited { color: #666; }
a:hover { color: #fff; background-color:#000; }

.fieldWithErrors {
  padding: 2px;
  background-color: red;
  display: table;
}

.error_messages {
  border: 2px solid red;
  background-color: #fee;
  border-radius: 5px;
  padding: 0.5em;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
}

.error_messages h2 {
  text-align: left;
  font-weight: bold;
  font-size: 12px;
  color: #600;
}

.error_messages p {
  color: #300;
}

.error_messages ul li {
  font-size: 12px;
  list-style: square;
}

div.uploadStatus {
  margin: 5px;
}

div.progressBar {
  margin: 5px;
}

div.progressBar div.border {
  background-color: #fff;
  border: 1px solid #888;
  width: 100%;
}

div.progressBar div.background {
  background-color: #333;
  height: 18px;
  width: 0%;
}

div.topbar {
  background-color: <%= @site_settings.site_color %>;
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  border-bottom: 1px black solid;
  padding-bottom: 1px;
  padding-top: 1px;
  background-image: url(/images/button-bg-prelight.png);
  background-position: 50% 50%;
  background-repeat: repeat-x;
}

div.topbar img {
  vertical-align: middle;
}

div.app_name {
  float: left;
  font-weight: bold;
  clear: none;
  padding-left: 3px;
}

div.app_name a {
  color: black;
  text-decoration: none;
}

div.app_name a:hover {
  color: white;
}

div.nav_links {
  text-align: center;
  clear: none;
}

div.nav_links a {
  color: black;
  text-decoration: none;
  padding: 5px;
  padding-top: 2px;
  padding-bottom: 3px;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  -moz-border-radius-topleft: 5px;
  -moz-border-radius-topright: 5px;
  -webkit-border-top-left-radius: 5px;
  -webkit-border-top-right-radius: 5px;
}

div.nav_links a:hover {
  background-color: #992;
  color: white;
}

div.nav_links a.selected {
  border: 1px black solid;
  position: relative;
  background-color: white;
  border-bottom: 1px white solid;
}

div.nav_links a.selected:hover {
  background-color: #000;
  border-bottom-color: black;
}

div.authbox {
  font-style: italic;
  float: right;
  clear: none;
  padding-right: 3px;
}

body {
  margin-top: 2.5em;
  font-family: Helvetica, Arial, sans-serif;
}

div.attribute_name {
  width: 150px;
  float: left;
}

.required {
  font-weight: bold;
}

textarea, .document_content {
    max-width: 60em;
    min-width: 30em;
    width: auto;
    min-height: 20em;
}

.document_content, .document_content p {
    font-family: serif;
}

img {
    border: none;
    vertical-align: middle;
}

ul.inline {
    display: inline-block;
    padding-left: 0;
    margin-left: 0;
}

ul.inline li {
    display: inline-block;
    margin-right: 0.3em;
}