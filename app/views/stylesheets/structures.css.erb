table.structure {
    min-width: 30em;
    margin-right: 0;
}

table.structure > tbody > tr > td {
    width: 100%;
}

table.structure > tbody > tr > td:first-child {
    width: 10em;
    vertical-align: top;
    border-top: 1px #666 dashed;
}

.structure_external {
    background-color: #eee; 
	padding: 0.5em; 
	margin-bottom: 0.5em; 
	border-radius: 5px; 
	-moz-border-radius: 5px; 
	-webkit-border-radius: 5px; 
	position: relative;
}

.structure_external textarea {
	width: 95%;
	min-height: 4em;
}