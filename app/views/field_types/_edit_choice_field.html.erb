<table>
  <tr>
    <th>Choices</th>
    <td>
      <%= jipe_editor field, "choice_values", :class => "Config", :attr_id => field.attr.id, :id => "attr_#{field.attr.id}_config_choice_values" %>
    </td>
  </tr>
  <tr>
    <th>Display as</th>
    <td>
      <%= select field, "display_type", ["radio", "dropdown", "multiple"] %>
    </td>
  </tr>
</table>