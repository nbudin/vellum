%h1
  = h @doc_value.name
  \&mdash; Version History
:css
  table.versions {
    max-width: 60em;
    width: 100%;
    border-collapse: collapse;
  }
  
  table.versions th {
    text-align: left;
  }
  
  table.versions thead tr {
    border-bottom: 1px black solid;
  }
  
  table.versions tbody tr.odd {
    background-color: #ddd;
  }
.jumpbox
  .navigation
    = link_to structure_path(@project, @structure), :class => "button back" do
      = image_tag "arrow_left.png"
      = h @structure.name
  %h2= @doc_value.name
  %p
    %b Defined in template:
    = link_to doc_template_path(@structure.project.template_schema, @structure.doc_template) do
      = image_tag "template.png"
      = @structure.doc_template.name
%table.versions
  %thead
    %tr
      %th Number
      %th Author
      %th Date
  %tbody
    - @versions.each do |version|
      %tr{:class => cycle "odd", "even"}
        %td= version.version
        %td= version.author_id && Person.find(version.author_id).name
        %td= version.updated_at.strftime("%a, %b %d, %Y at %H:%M")
        %td= link_to "View", doc_value_version_path(@project, @structure, @doc_value, version.version)
