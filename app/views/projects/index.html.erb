<div class="col-md-8">
  <h1>Projects</h1>

  <% if @site_settings.welcome_html.blank? -%>
    <h1>Welcome to Vellum</h1>

    <p>Vellum is a collaborative space for online writing projects.</p>
  <% else -%>
    <%= @site_settings.welcome_html %>
  <% end -%>

  <ul class="list-group">
    <%= itemlist_items(@projects) do |project| %>
      <li class="list-group-item">
        <ul class="list-inline">
          <li>
            <%= link_to project_path(project) do -%>
              <%= image_tag "project.png" %>
              <%= project.name %>
            <% end -%>
          </li>
          <li>
            <%= item_actions(project, :delete_path => projects_path) %>
          </li>
        </ul>
      </li>
    <% end %>
    <% if person_signed_in? -%>
      <li class="list-group-item list-group-item-success">
        <%= link_to new_project_path do %>
          <%= image_tag "project_add.png" %>
          Create project...
        <% end %>
      </li>
    <% end -%>
  </ul>

  <% unless person_signed_in? -%>
    <p>To see your projects, please <%= link_to "log in", new_person_session_path %>.</p>
  <% end -%>
</div>

<% if current_person.try(:admin?) -%>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <div class="panel-title pull-left" style="padding-top: 5px">
          <%= @site_settings.site_name %>
        </div>
        <div class="navbar-right">
          <%= link_to({ :controller => "about", :action => "edit_settings" }, :class => "btn btn-default btn-sm") do %>
            Edit site settings
          <% end -%>
        </div>
      </div>
    
      <div class="panel-body">
        <dl>
          <dt>Color</dt>
          <dd><%= @site_settings.site_color %></dd>
          <dt>Site email</dt>
          <dd><%= @site_settings.site_email %></dd>
          <dt>Admin</dt>
          <dd><%= @site_settings.admin && @site_settings.admin.name %></dd>
        </dl>
      </div>
    </div>
  </div>
<% end -%>


