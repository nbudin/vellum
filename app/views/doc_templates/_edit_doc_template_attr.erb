<tr <% if dta_fields.object.new_record? %>class="willAdd"<% end %>>
  <td class="name">
    <div class="form-group">
      <%= dta_fields.text_field "position", :style => "width: 1.5em;", :class => "position" %>
      <%= dta_fields.label "name", dta_fields.object.new_record? ? "Add" : "Name", :class => "control-label" %>
      <%= dta_fields.text_field "name", :class => "form-control" %>
    </div>
  </td>
  <td class="value">
    <div class="form-group">
      <%= dta_fields.label "ui_type", "Display as", :class => "control-label" %>
      <%= dta_fields.select "ui_type", DocTemplateAttr.ui_types_for_select, {}, {:class => "ui_type_select form-control"} %>
    </div>
    <div class="choices form-group">
      <%= dta_fields.label "human_choices", "Choices", :class => "control-label" %>
      <%= dta_fields.text_field "human_choices", :placeholder => "Example: apple, banana, pear", :class => "form-control" %>
    </div>
  </td>
  <td>
    <% unless dta_fields.object.new_record? -%>
      <span style="float: right; color: red; font-weight: bold; margin-right: 10px;">
        <%= dta_fields.label(:_destroy, "Remove") %>
        <%= dta_fields.check_box(:_destroy, :class => "delete") %>
      </span>
    <% end -%>
  </td>
</tr>
